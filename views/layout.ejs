<!-- DMR -->
<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='utf-8'/>
    <title>Quiz-DMR</title>
    <link rel='stylesheet' type='text/css' href='/stylesheets/style.css' />
    <!-- Redimensionamiento a pantallas anchas -->
    <link rel='stylesheet' type='text/css' 
      media='only screen and (min-width: 530px ) and ( min-device-width:481px )' 
      href='/stylesheets/wide.css' />
    <!-- Redimensionamiento a pantallas anchas -->
    <link rel='stylesheet' type='text/css' 
    	  media='only screen and (max-width: 480px)' 
    	  href='/stylesheets/smartphone.css' />
  </head>
  <body>
	<div id='page-wrap'>
	<header class='main' id='h1'>
	    <%if(!session.user){%>
      <span class="right"><a href="/user">Sign up</a> - <a href="/login">Login</a></span>
    <%}else{%>
      <span class="right"> <%=session.user.username%> - <a href="/user/<%=session.user.id%>/edit">Settings</a> - <a href="/logout">Logout</a></span>
    <%}%>
      <h2>Quiz-DMR: El juego de las preguntas</h2>
	</header>
	<nav class='main' id='n1' role='navigation'>
	    <span><a href='/'>Inicio</a></span>
	    <!--<span><a href='/quizes/question'>Preguntas</a></span>-->
      <span><a href='/quizes'>Preguntas</a></span>
	    <span><a href='/author'>Créditos</a></span>
      <span><a href="/quizes/statistics">Estadísticas</a></span>
	</nav>
	
   <section class="main" id="s1">
    <% if(errors.length) { %>
          <span id="ErrorMsgs">
            Corregir errores: <br>
            <% for (var i in errors) { %>
              <span><%= errors[i].message %></span> <br>
            <% }  %>
          </span>
        <% } %>
      
        <%- body %>
      </section
	
  <footer>
	    <a href='https://github.com/davidmorenoros/quizdmr'>GITHUB - Proyecto QuizDMR</a>	    
	</footer>
	
  </div>
  </body>
</html>
